{
  "version": "0.1.0",
  "theme": "light",
  "layout": {
    "columns": 3,
    "width": "default",
    "show_nav": true,
    "column_config": [
      {
        "width": "normal",
        "modules": ["arxiv", "clock"]
      },
      {
        "width": "normal", 
        "modules": ["github", "weather", "monitor"]
      },
      {
        "width": "normal", 
        "modules": ["rss", "todo", "releases"]
      }
    ]
  },
  "modules": [
    {
      "id": "arxiv",
      "enabled": true,
      "collapsed": false,
      "config": {
        "refresh_interval": 3600,
        "keywords": [
          "machine learning",
          "artificial intelligence",
          "quantum computing"
        ]
      }
    },
    {
      "id": "github",
      "enabled": true,
      "collapsed": false,
      "config": {
        "refresh_interval": 3600,
        "username": "wayneXuCN",
        "repositories": [
          "ResearchDashboard",
          "nicegui"
        ]
      }
    },
    {
      "id": "rss",
      "enabled": true,
      "collapsed": false,
      "config": {
        "refresh_interval": 3600,
        "feed_urls": [
          "https://sspai.com/feed",
          "https://waynexucn.github.io/feed.xml"
        ],
        "fetch_limit": 10,
        "show_limit": 5,
        "show_author": true,
        "show_description": true,
        "show_date": true,
        "show_image": true
      }
    },
    {
      "id": "clock",
      "enabled": true,
      "collapsed": false,
      "config": {
        "timezone": "local",
        "format_24h": false,
        "show_seconds": true,
        "update_interval": 1,
        "date_format": "%A, %B %d, %Y"
      }
    },
    {
      "id": "weather",
      "enabled": true,
      "collapsed": false,
      "config": {
        "city": "Beijing",
        "api_key": ""
      }
    },
    {
      "id": "todo",
      "enabled": true,
      "collapsed": false,
      "config": {
        "max_items": 10,
        "auto_save": true
      }
    },
    {
      "id": "releases",
      "enabled": true,
      "collapsed": false,
      "config": {
        "refresh_interval": 3600,
        "repositories": [
          "microsoft/vscode",
          "gitlab:gitlab-org/gitlab",
          "codeberg:forgejo/forgejo",
          "docker:library/nginx"
        ],
        "max_releases": 5
      }
    },
    {
      "id": "monitor",
      "enabled": true,
      "collapsed": false,
      "config": {
        "timeout": 10,
        "sites": [
          "https://www.google.com",
          "https://www.github.com",
          "https://www.baidu.com",
          "https://api.github.com",
          "https://www.wikipedia.org"
        ]
      }
    }
  ]
}