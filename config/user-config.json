{
  "version": "0.1.0",
  "theme": "light",
  "layout": {
    "columns": 3,
    "width": "default",
    "show_nav": true,
    "column_config": [
      {
        "width": "normal",
        "modules": [
          "arxiv",
          "clock",
          "progress"
        ]
      },
      {
        "width": "normal",
        "modules": [
          "github",
          "weather"
        ]
      },
      {
        "width": "normal",
        "modules": [
          "rss",
          "todo",
          "releases",
          "animals"
        ]
      }
    ]
  },
  "modules": [
    {
      "id": "arxiv",
      "enabled": true,
      "collapsed": false,
      "config": {
        "refresh_interval": 3600,
        "keywords": [
          "machine learning",
          "artificial intelligence",
          "quantum computing"
        ]
      }
    },
    {
      "id": "github",
      "enabled": true,
      "collapsed": false,
      "config": {
        "refresh_interval": 3600,
        "username": "wayneXuCN",
        "repositories": [
          "ModularDashboard",
          "nicegui"
        ]
      }
    },
    {
      "id": "rss",
      "enabled": true,
      "collapsed": false,
      "config": {
        "refresh_interval": 3600,
        "feed_urls": [
          "https://sspai.com/feed",
          "https://waynexucn.github.io/feed.xml"
        ],
        "fetch_limit": 10,
        "show_limit": 5,
        "show_author": true,
        "show_description": true,
        "show_date": true,
        "show_image": true
      }
    },
    {
      "id": "clock",
      "enabled": true,
      "collapsed": false,
      "config": {
        "timezone": "local",
        "format_24h": false,
        "show_seconds": true,
        "update_interval": 1,
        "date_format": "%A, %B %d, %Y"
      }
    },
    {
      "id": "weather",
      "enabled": true,
      "collapsed": false,
      "config": {
        "city": "Beijing",
        "api_key": ""
      }
    },
    {
      "id": "todo",
      "enabled": true,
      "collapsed": false,
      "config": {
        "max_items": 10,
        "auto_save": true
      }
    },
    {
      "id": "releases",
      "enabled": true,
      "collapsed": false,
      "config": {
        "refresh_interval": 3600,
        "repositories": [
          "microsoft/vscode",
          "gitlab:gitlab-org/gitlab",
          "codeberg:forgejo/forgejo",
          "docker:library/nginx"
        ],
        "max_releases": 5
      }
    },
    {
      "id": "animals",
      "enabled": true,
      "collapsed": false,
      "config": {
        "animal_type": "cat",
        "height": 200,
        "auto_refresh": false,
        "refresh_interval": 1800,
        "show_title": true,
        "border_radius": 8
      }
    },
    {
      "id": "monitor",
      "enabled": true,
      "collapsed": false,
      "config": {
        "timeout": 12,
        "sites": [
          "https://www.google.com",
          "https://www.github.com",
          "https://api.github.com",
          "https://www.wikipedia.org",
          "https://www.stackoverflow.com"
        ]
      }
    },
    {
      "id": "progress",
      "enabled": true,
      "collapsed": false,
      "config": {
        "default_period": "day",
        "auto_update": true,
        "update_interval": 60
      }
    }
  ]
}