{
  "version": "0.1.0",
  "theme": "light",
  "layout": {
    "columns": 2,
    "width": "default",
    "show_nav": true,
    "column_config": [
      {
        "width": "normal",
        "modules": ["clock", "weather"]
      },
      {
        "width": "normal", 
        "modules": ["todo", "releases"]
      }
    ]
  },
  "modules": [
    {
      "id": "clock",
      "enabled": true,
      "collapsed": false,
      "config": {
        "timezone": "local",
        "format_24h": false,
        "show_seconds": true,
        "update_interval": 1,
        "date_format": "%A, %B %d, %Y"
      }
    },
    {
      "id": "weather",
      "enabled": true,
      "collapsed": false,
      "config": {
        "city": "Beijing",
        "api_key": ""
      }
    },
    {
      "id": "todo",
      "enabled": true,
      "collapsed": false,
      "config": {
        "max_items": 10,
        "auto_save": true
      }
    },
    {
      "id": "releases",
      "enabled": true,
      "collapsed": false,
      "config": {
        "refresh_interval": 3600,
        "repositories": [
          "microsoft/vscode",
          "gitlab:gitlab-org/gitlab",
          "codeberg:forgejo/forgejo",
          "docker:library/nginx"
        ],
        "max_releases": 5
      }
    }
  ]
}